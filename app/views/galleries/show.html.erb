<% title "User #{@gallery.user_id}'s Gallery: #{@gallery.name.capitalize} (#{@gallery.shoot_date})" %>

<p><%= link_to "New Photo", new_gallery_photo_path(@gallery) %> |
  <%= link_to "Edit Gallery", edit_gallery_path(@gallery) %> |
  <%= link_to "Destroy Gallery", @gallery,
    :confirm => 'Are you sure? This will destroy all images in this gallery.',
    :method => :delete %> |
  <%= link_to "View All Galleries", galleries_path %>
</p>

<div class="photo_grid">
  <% for photo in @gallery.photos %>
  <div class="image">
    <%= link_to (image_tag photo.image.url(:small)), [@gallery, photo] %><br />

    <%=h photo.name %> - Rating: <%=h photo.rating %><br />
      <%= link_to "Edit", edit_gallery_photo_path(@gallery, photo) %> |
      <%= link_to "Destroy", [@gallery, photo], :confirm => 'Are you sure?',
        :method => :delete %>
  </div>
  <% end %>
</div>

