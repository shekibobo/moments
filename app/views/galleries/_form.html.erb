<% form_for @gallery, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :shoot_date %><br />
    <%= f.date_select :shoot_date %>
  </p>

  <p>
    <%= f.label :collection %><br />
    <% if @gallery.collection.file? %>
      <%= @gallery.collection.original_filename %>
      <%= link_to "Build Gallery from File", :action => 'extract', :id => @gallery.id %><br />
    <% end %>

    <%= f.file_field :collection %>
  </p>
  <p><%= f.submit %></p>
<% end %>
